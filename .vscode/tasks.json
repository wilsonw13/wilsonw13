// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start All Dev Servers",
      "type": "shell",
      "command": "pnpm dev",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "group": "dev-servers"
      },
      "runOptions": {
        "runOn": "folderOpen" // Automatically runs when you open the project
      },
      "group": {
        "kind": "build",
        "isDefault": true // Makes this the default task for Ctrl + Shift + B
      }
    }
  ]
}
