root = true

[*]
charset = utf-8
end_of_line = lf        # Switched to lf for cross-platform compatibility
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,ts,jsx,tsx,py,rb,yml,json,toml}]
max_line_length = 120

[*.{py,sh}]
indent_size = 4

[*.{md}]
indent_size = 4

[Makefile]
indent_style = tab