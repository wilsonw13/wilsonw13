{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* Modules and Transforms */
    "module": "ESNext",
    "target": "es2020",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    /* Global Libraries */
    "lib": ["esnext"],
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false
  },
  "include": ["src/**/*"]
}
