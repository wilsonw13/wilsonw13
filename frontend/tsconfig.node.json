{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* Build Info */
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    /* Module Overrides (For Node scripts: vite.config.ts) */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "./*": ["./*"]
    }
  },
  "include": ["vite.config.ts", "src/plugins/**/*.ts"]
}
